<h1 style="text-align: center;">Create a Role</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@role) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.hidden_field :active, :value => true %>
      <br>


      <%= f.submit "Create a role", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
